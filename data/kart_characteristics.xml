            <startup time="*0.8 *0.8" boost="*0.8 *0.8" />
            <rescue duration="*1.5" />
            <nitro engine-force="*0.8" max-speed-increase="*0.9" max="*0.8" />
            <slipstream min-collect-time="*1.2" add-power="*0.9"
                        max-speed-increase="*0.9" duration-factor="*0.9" />
        </characteristic>
    </player-characteristics>
</characteristics>
