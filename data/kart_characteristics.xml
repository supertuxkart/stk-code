            <startup boost="*0.875 *0.875" />
            <explosion duration="*0.8" radius="*0.8" />
            <nitro engine-force="*0.825" consumption="*1.375" max-speed-increase="*1.1" />
            <slipstream duration-factor="*0.8" fade-out-time="*1" />
            <parachute lbound-fraction="0.45" ubound-fraction="0.275" />
        </characteristic>
        <characteristic name="medium">
            <turn radius="0:2.875 5:4.176 12:8.775 20:16.184 30:25.942 50:45.458" />
            <engine power="*0.875" max-speed="*0.948"
                    max-speed-reverse-ratio="*1.05"/>
            <gear switch-ratio="0.1 0.25 0.45 0.7 1 4"
                  power-increase="2.5 2.08 1.76 1.44 1.22 1" />
            <mass value="*0.75" />
            <skid reduce-turn-min="0.2475" reduce-turn-max="0.895" bonus-force="*0.875 *0.875 *0.875" />
            <startup boost="*0.875 *0.875" />
            <explosion duration="*0.8" radius="*0.8" />
            <nitro engine-force="*0.825" consumption="*1.375" max-speed-increase="*1.1" />
            <slipstream duration-factor="*0.8" fade-out-time="*1" />
            <parachute lbound-fraction="0.45" ubound-fraction="0.275" />
        </characteristic>
        <characteristic name="heavy">
            <turn radius="0:3.15 5:4.608 12:9.75 20:18.224 30:29.212 50:51.188" />
            <engine power="*1" max-speed="*1"
                    max-speed-reverse-ratio="*1" />
            <gear switch-ratio="0.1 0.25 0.45 0.7 1 4"
                  power-increase="2.05 1.74 1.53 1.32 1.16 1" />
            <mass value="*1" />
            <skid reduce-turn-min="0.285" reduce-turn-max="0.895" bonus-force="*1.0 *1.0 *1.0" />
            <startup boost="*0.8 *0.8" />
            <explosion duration="*0.6" radius="*0.6" />
            <nitro engine-force="*1" consumption="*1.67" max-speed-increase="*1.0" />
            <slipstream length="*1.1" collect-time="*1.1"
                   duration-factor="*0.6" fade-out-time="*1" />
